{
  "manifest_version": 3,
  "name": "Unicode Domain Warning",
  "version": "1.2",
  "description": "Shows a warning when visiting a domain with Unicode characters, and displays the non-Unicode \"Punycode\" version of the domain.",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "punycode.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "warning.html" ],
      "matches": [ "<all_urls>" ],
      "use_dynamic_url": true
    }
  ],
  "options_page": "options.html"
}