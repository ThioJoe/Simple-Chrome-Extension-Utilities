{
  "manifest_version": 2,
  "name": "Alt Click Text Randomizer",
  "version": "2.0",
  "description": "Click the icon to toggle text randomization on the current page.",
  "permissions": [
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Text Randomizer",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}